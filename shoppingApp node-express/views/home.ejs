<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./includes/head.ejs') %>
  </head>
  <body>
    <%- include('./includes/navBar.ejs') %>
    <div class="container">
      <% data.map(el=>{%>
      <div class="item">
        <h1><%= el.title %></h1>
        <p><%= el.discription %></p>
        <span><%= el.price %></span>

        <button><a href="/products/<%= el.id %>">view</a></button>
      </div>
      <%})%>
    </div>
  </body>
</html>
